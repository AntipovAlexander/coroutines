<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity"
        android:padding="16dp">

    <TextView
            android:id="@+id/stockDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:text="Stock date: dd-mm-yyyy"/>

    <TextView
            android:id="@+id/openValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/stockDateValue"
            android:text="Open: N\A"/>

    <TextView
            android:id="@+id/highValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/openValue"
            android:textColor="@android:color/black"
            android:text="High: N\A"/>

    <TextView
            android:id="@+id/lowValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/highValue"
            android:text="Low: N\A"/>

    <TextView
            android:id="@+id/closeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/lowValue"
            android:textColor="@android:color/black"
            android:text="Close: N\A"/>

    <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_arrow_desc"
            android:layout_alignBottom="@id/closeValue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp"
    />

    <Button
            android:id="@+id/goToCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Go to calc"/>

</RelativeLayout>